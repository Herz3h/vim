{
    "languageserver": {
        "intelephense": {
            "command": "node",
            "args": ["/usr/local/lib/node_modules/intelephense/lib/intelephense.js", "--stdio"],
            "filetypes": ["php"]
        },
        "solargraph": {
            "command": "solargraph",
            "args": ["stdio"],
            "filetypes": ["ruby"]
        },
        "flow": {
            "command": "flow",
            "args": ["lsp"],
            "filetypes": ["javascript", "javascriptreact"],
            "initializationOptions": {},
            "requireRootPattern": true,
            "settings": {},
            "rootPatterns": [".flowconfig"]
        }
    }
}
